<div class="main users-new">
  <div class="container">
    <div class="users-form-heading">ログイン</div>
    <div class="form users-form">
      <div class="form-body">
        <%= form_tag("/login") do %>
          <p class="form-guide">メールアドレス</p>
          <input name="email" value="<%= @email %>">
          <p class="form-guide">パスワード</p>
          <input type="password" name="password" value="<%= @password %>">
          <input type="submit" value="ログイン">
        <% end %>
      </div>
    </div>
  </div>
</div>
